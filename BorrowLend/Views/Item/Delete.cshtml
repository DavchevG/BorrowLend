@model BorrowLend.Models.Item
@{
    ViewData["Title"] = "Delete";
}
<h1>Delete</h1>

<form asp-action="DeleteConfirmed" asp-controller="Item" asp-route-id="@Model.Id" method="post">
    <div class="alert alert-warning">
        <h3>Are you sure you want to delete this item?</h3>
    </div>
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" asp-controller="Item" class="btn btn-secondary">Cancel</a>
</form>
