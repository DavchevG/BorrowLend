@model BorrowLend.Models.Item
@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>
<form method="post" asp-action="Create">
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <input class="col-3 m-1 form-control" asp-for="Name" placeholder="Item name" />
                <input class="col-3 m-1 form-control" asp-for="Borrower" placeholder="Borrower" />
                <input class="col-3 m-1 form-control" asp-for="Lender" placeholder="Lender" />
            </div>
            <div class="form-group row">
                <button type="submit" class="col-3 btn btn-success m-1">Save</button>
                <button asp-action="Index" class="col-3 btn btn-danger m-1">Back</button>
            </div>
        </div>  
    </div>
</form>
